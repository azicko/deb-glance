/var/log/glance/glance-registry.log /var/log/glance/glance-api.log {
    daily
    compress
    missingok
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            restart glance-api
            restart glance-registry
        else
            invoke-rc.d glance-api restart
            invoke-rc.d glance-registry restart
        fi
    endscript
}
